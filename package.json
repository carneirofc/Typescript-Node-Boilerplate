{
  "name": "typescript-node-boilerplate",
  "author": "Claudio Carneiro",
  "license": "GPL-3.0",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "babel src --source-maps --copy-files --out-dir build",
    "clean": "rm -rf build/ && mkdir -p build",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/index.ts' -e ts",
    "start": "node build/index.js",
    "test": "jest --detectOpenHandles --onlyChanged --watch src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/node": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.0"
  },
  "babel": {
    "sourceMaps": "inline",
    "retainLines": true,
    "extensions": [
      ".ts",
      ".js"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "ignore": []
  }
}
