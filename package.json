{
  "name": "Typescript-Node-Boilerplate",
  "author": "Claudio F. Carneiro",
  "homepage": "https://github.com/carneirofc/Typescript-Node-Boilerplate.git",
  "license": "GPL-3.0",
  "version": "1.0.0",
  "description": "Boilerplate for typescript and node",
  "scripts": {
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc",
    "clean": "rm -rf ./build && mkdir -p build",
    "dev": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect src/index.ts",
    "info": "npm run info:circular; npm run info:orphans; npm run info:leaves; npm run info:deps",
    "info:circular": "npx madge --circular ./src/  || true",
    "info:deps": "npx madge --image graph.svg ./src/",
    "info:leaves": "npx madge --leaves ./src/ || true",
    "info:orphans": "npx madge --orphans ./src/  || true",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node build/index.js",
    "serve:debug": "node --inspect build/index.js",
    "test": "jest --detectOpenHandles --coverage --verbose --watch src",
    "test:watch": "npm run test -- --watchAll"
  },
  "keywords": [],
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "madge": "^4.0.0",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "madge": {
    "fileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ]
  },
  "dependencies": {}
}
